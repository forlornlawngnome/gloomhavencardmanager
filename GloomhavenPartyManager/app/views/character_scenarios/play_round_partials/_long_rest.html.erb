<a href="javascript:;" data-open="long_rest" class= "button expanded">
  Long Rest
</a>
<div class="large reveal" id="long_rest" data-reveal>
  <%= form_with(url: long_rest_character_round_path ,method: :put, local: true) do |form| %>
    <%=form.hidden_field :character_scenario_id, value: @character_scenario.id%>
    <%=form.hidden_field :round_id, value: @round.id%>
    <div class="grid-x grid-margin-x grid-padding-y">
      <div class="cell small-12">
        <h3>Choose a Card to Lose</h3>
      </div>
      <%@character.ability_cards.chosen.discarded.each do |card|%>
        <div class="cell small-12 medium-3">
          <%render card, card: card%>
          <div class="grid-x">
            <div class="cell auto">
              <%=radio_button_tag "lost_card_id", card.id, nil, required: 'required' %>
              <label for="lost_card_id_<%=card.id%>">
                <b><%=card.name%></b>
              </label>
            </div>
            <label for="lost_card_id_<%=card.id%>">
              <%= render card, card: card%>
            </label>
          </div>
        </div>
      <%end%>
      <%=form.submit "Lose Card", class: "button expanded alert"%>
    </div>
  <%end%>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
