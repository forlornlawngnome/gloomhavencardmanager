<h5>Discarded Cards</h5>
<%= form_with(url: recover_discarded_character_round_path(@character_round) ,method: :put, local: true) do |form| %>
  <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
    <%@character.ability_cards.where(available: true, status: "Discarded").each do |card|%>
      <div class="cell small-12 medium-4">
        <div class="grid-x">
          <div class="cell auto">
            <%=radio_button_tag :discarded_card_id, card.id,nil, required: 'required' %>
            <label for="discarded_card_id_<%=card.id%>">
              <b><%=card.name%></b>
            </label>
          </div>
          <div class="cell shrink">
            <a href="javascript:;">
              <i class="material-icons md-18" data-open="card_<%=card.id%>">info</i>
            </a>
            <div class="tiny reveal" id="card_<%=card.id%>" data-reveal>
              <%= render card, card: card%>
              <button class="close-button" data-close aria-label="Close modal" type="button">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
          <label for="discarded_card_id_<%=card.id%>">
            <%= render card, card: card%>
          </label>
        </div>
      </div>
    <%end%>
  </div>
  <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
    <div class="cell small-12 medium-6">
      <%=form.submit "Recover Discarded Card", class:"button expanded"%>
    </div>
    <div class="cell small-12 medium-6">
      <%=form.submit "Lose to Avoid Damage", class:"button alert expanded"%>
    </div>
  </div>
<%end%>
