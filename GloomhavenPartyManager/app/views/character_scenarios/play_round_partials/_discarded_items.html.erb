<h5>Consumed Items</h5>
<%items = @character.items.active.discarded%>
<%if items.count <1 %>
  <i>None.</i>
<%else%>
  <%= form_with(url: items_character_round_path(@character_round) ,method: :put, local: true) do |form| %>
    <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
      <%items.each do |item|%>
        <div class="cell small-12 medium-4">
          <%=render "character_scenarios/play_round_partials/item_radio", item: item%>
        </div>
      <%end%>
    </div>
    <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
      <div class="cell small-12 medium-12">
        <%=form.submit "Restore Item", class:"button expanded"%>
      </div>
    </div>
  <%end%>
<%end%>
