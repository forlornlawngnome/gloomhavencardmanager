<h3>Short Rest</h3>

<%= form_with(url: short_rest_path ,method: :get, local: true) do |form| %>
  <%=form.hidden_field :character_scenario_id, value: @character_scenario.id%>
  <%=form.hidden_field :card_id, value: @card.id%>
  <div class="grid-x grid-margin-x grid-padding-x align-spaced">
    <div class="cell small-12 medium-4">
      <%=render @card, card: @card%>
    </div>
    <div class="cell small-12 medium-4">
      <%=form.submit "Confirm Card", class: "button expanded"%>
      <%=form.submit "Lose A Different Card", class: "button alert expanded"%>
    </div>
  </div>
<%end%>
