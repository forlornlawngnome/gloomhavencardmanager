<p id="notice"><%= notice %></p>

<h1>Attack Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Value</th>
      <th>Reshuffle</th>
      <th>Character class</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attack_cards.each do |attack_card| %>
      <tr>
        <td><%= attack_card.name %></td>
        <td><%= attack_card.image %></td>
        <td><%= attack_card.value %></td>
        <td><%= attack_card.reshuffle %></td>
        <td><%= attack_card.character_class_id %></td>
        <td><%= attack_card.count %></td>
        <td><%= link_to 'Show', attack_card %></td>
        <td><%= link_to 'Edit', edit_attack_card_path(attack_card) %></td>
        <td><%= link_to 'Destroy', attack_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Attack Card', new_attack_card_path %>
