<h2>Level up <%@character.name%> <small>Level <%=(@character.level + 1)%></small></h2>
<hr />
<%= form_with(url: levelup_complete_character_path, method: :put, local: true) do |form| %>
  <%=form.hidden_field :target_level, value: params["level"]%>
  <div class="grid-x grid-margin-x align-spaced">
    <div class="cell small-12 medium-3 auto">
      <h3>Choose a Perk </h3>
      <%@character.character_class.perks.each do |perk|%>
        <fieldset class="cell">
          <%=form.radio_button :perk_id, perk.id%> <label for="perk_id_<%=perk.id%>" style="display: inline;"><%=perk.description%></label>
        </fieldset>
      <%end%>
    </div>
    <div class="cell small-12 medium-9 auto">
      <h3>Choose a Card </h3>
      <div class="grid-x grid-margin-x align-spaced">
      	<%@character.level_up_cards(@character.level + 1).each do |card|%>
      		<div class="cell small-12 medium-4 auto">
      			<div class="card">
              <%if !card.getTopEnhancements.empty?%>
                <div class="card-section callout text-center" style="margin:0">
        			    <%card.getTopEnhancements.each do |en|%>
                    <li>
                      <%=en.enhancement.description%>
                    </li>
                  <%end%>
        			  </div>
              <%end%>
      			  <div class="">
      			    <%= image_tag card.getCardImage%>
      			  </div>
              <%if !card.getBottomEnhancements.empty?%>
        			  <div class="card-section callout text-center" style="margin:0">
                  <%card.getBottomEnhancements.each do |en|%>
                    <li>
                      <%=en.enhancement.description%>
                    </li>
                  <%end%>
        			  </div>
              <%end%>
      		   	<div class="card-section grid-x align-bottom">
                <fieldset class="cell">
                  <%=form.radio_button :ability_card_id, card.id%> <label for="ability_card_id_<%=card.id%>">Select this Card</label>
                </fieldset>
      		    </div>
      			</div>
      		</div>
      	<%end%>
      </div>
    </div>
    <div class="cell small-12">
      <%= form.submit "Level Up", class: "button expanded" %>
    </div>
  <%end%>
</div>
