<h2>Add Enhancement to a Card</h2>
<hr />
<%= form_with(url: buy_enhancements_character_path, scope: :ability_cards_enhancements,method: :put, local: true) do |form| %>
  <%=form.hidden_field :character_id, value: @character.id%>
  <div class="grid-x grid-margin-x align-spaced">
    <div class="cell small-12 medium-3 auto">
      <h4>Choose an Enhancement </h4>
      <%Enhancement.all.each do |enhance|%>
        <fieldset class="cell">
          <%=form.radio_button :enhancement_id, enhance.id%>
          <label for="ability_cards_enhancements_enhancement_id_<%=enhance.id%>">
            <%if enhance.cost > 0%>
              (<%=enhance.cost%>)
            <%end%>
            <%=enhance.description%>
          </label>
        </fieldset>
      <%end%>
      <hr />
      <h4>Additional Cost</h4>
      Level costs, others on card cost
    </div>
    <div class="cell small-12 medium-9 auto">
      <h4>Choose a Card </h4>
      <div class="grid-x grid-margin-x align-spaced">
      	<%@character.ability_cards.available.each do |card|%>
      		<div class="cell small-12 medium-4 auto">
      			<div class="card">
              <%=render card, card: card%>
      		   	<div class="card-section grid-x align-bottom">
                <fieldset class="cell">
                  <%=form.radio_button :ability_card_id, card.id%> <label for="ability_cards_enhancements_ability_card_id_<%=card.id%>">Select <%=card.name%></label>
                </fieldset>
      		    </div>
      			</div>
      		</div>
      	<%end%>
      </div>
    </div>
    <div class="cell small-12">
      <%=form.check_box :is_top%>
      <label for="ability_cards_enhancements_is_top" type="checkbox">Is this the top of the card?</label>
      <%= form.submit "Level Up", class: "button expanded" %>
    </div>
  <%end%>
</div>
