<h5>Choose your Character or Create a New One</h5>
<div class="grid-x grid-margin-x align-spaced">
	<%current_player.characters.each do |character|%>
		<div class="cell small-12 medium-5 flex-container auto">
			<div class="card">
			  <div class="">
			    <%= image_tag character.character_class.getCharacterMatFrontLocation%>
			  </div>
			  <div class="card-section callout text-center">
			    <h4><%=character.name.titleize%></h4>
			  </div>
		   	<div class="card-section grid-x align-bottom">
		    	<%= form_with url: select_character_path, class: "small-12" do |form|%>
		    		<%= form.hidden_field :character_id, value: character.id%>
		    		<%=form.submit "Select Character", class: "button large expanded", style: "margin: 0px"%>
		    	<%end%>
		    </div>
			</div>
		</div>
	<%end%>
	<div class="cell small-12  medium-6 large-4 flex-container auto">
		<div class="card">
			<%= link_to select_class_characters_path, class: "cell auto" do %>
				<br /> <br />
			  <div class="grid-x align-middle">
			  	<span class="cell text-center">
			  	<i class="fas fa-plus fa-5x"></i>
			    <h3><%= "Create a New Character!"%></h3>
			  </span>
			  </div>
			<%end%>
		</div>
				
	</div>
</div>
