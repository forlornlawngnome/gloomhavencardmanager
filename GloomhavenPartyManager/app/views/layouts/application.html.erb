<!DOCTYPE html>
<html>
  <head>
    <title>GloomhavenPartyManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% stylesheet_pack_tag 'stylesheets' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

    <div class="top-bar">
      <div class="top-bar-left">
        <ul class=" menu">
          <%if party_chosen?%>
            <li><b><%=link_to active_party.name.titleize, root_path%></b></li>
          <%else%>
            <li><b><%=link_to "Gloomhaven Card Manager", root_path%></b></li>
          <%end%>
          <li><%=link_to "Select a Party", party_select_path%></li>
          <%if active_scenario.nil?%>
            <li><%=link_to "Start Game", new_scenario_path%></li>
          <%else%>
            <li><%=link_to "Play Scenario", play_scenario_path(active_scenario)%></li>
          <%end%>
          <li><%=link_to "Manage Characters", choose_characters_path%></li>
        </ul>
      </div>
      <div class="top-bar-right">
        <ul class="menu">
          <%if logged_in?%>
            <li><%=link_to "Log Out", logout_path%></li>
          <%else%>
            <%= google_sign_in_button 'Sign in with Google', proceed_to: create_login_url, class: "button" %>
          <%end%>
        </ul>
      </div>
    </div>
    <div class="grid-container fluid">
      <%if notice%>
        <div class="callout success">
          <p id="notice"><%= notice %></p>
        </div>
      <%end%>
      <%= yield %>
    </div>
  </body>
</html>
