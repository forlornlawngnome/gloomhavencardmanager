<h2>Choose a Party:</h2>
<div class="grid-x grid-margin-x">
	<%current_player.parties.order(:name).each do |party|%>
		<div class="cell small-12 medium-6 large-4  flex-container auto">
			<div class="card">
			  <div class="callout primary">
			    <h4><%=party.name.titleize%></h4>
			  </div>
			  <div class="card-section">
			    <p><b>Scenarios Complete:</b> <%=party.scenarios.count%></p>
			    <p><b>Prosperity:</b> <%=party.prosperity%></p>
			    <p><b>Reputaiton:</b> <%=party.reputation%></p>
			    <p><b>Characters:</b> 
			    	<%party.characters.active.each do |character|%>
			    		<dd><%=character.name%> </dd>
			    	<%end%>
			    </p>
			  </div>
		    <div class="card-section grid-x align-bottom">
		    	<%= form_with url: select_party_path, class: "small-12" do |form|%>
		    		<%= form.hidden_field :party_id, value: party.id%>
		    		<%=form.submit "Select Party", class: "button large expanded", style: "margin: 0px"%>
		    	<%end%>
		    </div>
			</div>
		</div>
	<%end%>
	<div class="cell small-12  medium-6 large-4 flex-container auto">
		<div class="card">
			<%= link_to new_party_path, class: "cell auto" do %>
				<br /> <br />
			  <div class="grid-x align-middle">
			  	<span class="cell text-center">
			  	<i class="fas fa-plus fa-5x"></i>
			    <h3><%= "Create a New Party!"%></h3>
			  </span>
			  </div>
			<%end%>
		</div>
				
	</div>
</div>

