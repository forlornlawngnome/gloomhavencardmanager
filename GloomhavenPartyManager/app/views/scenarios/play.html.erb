<%if @scenario.started%>
	<h3><%=@scenario.display%><small> Round <%=@scenario.current_round.number%></small></h3>
	<div class="grid-x grid-margin-x align-spaced">
		<%=link_to "Next Round", reset_characters_scenario_path(@scenario),method: :put, class: "cell small-12 medium-3 button success"%>
		<%=link_to "Finish Scenario", finish_scenario_scenario_path(@scenario),method: :put, class: "cell small-12 medium-3 button warning"%>
	</div>

	<%@scenario.character_scenarios.each do |character_s|%>
		<%character = character_s.character%>
		<%=character.name%> - <%= character.character_class.name%><br />
		Health: <%=character_s.health%><br />
		Gold: <%=character_s.gold%><br />
		Experience: <%=character_s.experience%><br />
	<%end%>
<%else%>
	<%=render "initial_setup"%>
<%end%>
