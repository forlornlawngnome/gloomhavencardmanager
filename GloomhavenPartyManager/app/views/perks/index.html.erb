<p id="notice"><%= notice %></p>

<h1>Perks</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Count</th>
      <th>Character class</th>
      <th>Effects</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perks.each do |perk| %>
      <tr>
        <td><%= perk.description %></td>
        <td><%= perk.count %></td>
        <td><%= perk.character_class_id %></td>
        <td><%= perk.effects %></td>
        <td><%= link_to 'Show', perk %></td>
        <td><%= link_to 'Edit', edit_perk_path(perk) %></td>
        <td><%= link_to 'Destroy', perk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

