<%= form_with(model: character_round, local: true) do |form| %>
  <% if character_round.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(character_round.errors.count, "error") %> prohibited this character_round from being saved:</h2>

      <ul>
        <% character_round.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :round_id %>
    <%= form.collection_select :round_id, Round.all, :id, :number %>
  </div>

  <div class="field">
    <%= form.label :character_scenario_id %>
    <%= form.collection_select :character_scenario_id, CharacterScenario.all, :id, :display %>
  </div>

  <div class="field">
    <%= form.label :card_1_id %>
    <%= form.collection_select :card_1_id, AbilityCard.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :card_2_id %>
    <%= form.collection_select :card_2_id, AbilityCard.all, :id, :name, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :short_rest %>
    <%= form.check_box :short_rest %>
  </div>

  <div class="field">
    <%= form.label :long_rest %>
    <%= form.check_box :long_rest %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
