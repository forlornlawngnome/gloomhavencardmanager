<h5>Discarded Cards</h5>
<%discarded_abilities = @character.ability_cards.chosen.discarded%>
<%if discarded_abilities.count <1 %>
  <i>None.</i>
<%else%>
  <%= form_with(url: discard_actions_character_round_path(@character_round) ,method: :put, local: true) do |form| %>
    <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
      <%discarded_abilities.each do |card|%>
        <div class="cell small-12 medium-4">
          <%=render "character_scenarios/play_round_partials/ability_radio", card: card,type: "discarded"%>
        </div>
      <%end%>
    </div>
    <div class="grid-x grid-margin-x grid-padding-x grid-padding-y">
      <div class="cell small-12 medium-6">
        <%=form.submit "Recover Discarded Card", class:"button expanded"%>
      </div>
      <div class="cell small-12 medium-6">
        <%=form.submit "Lose to Avoid Damage", class:"button alert expanded"%>
      </div>
    </div>
  <%end%>
<%end%>
